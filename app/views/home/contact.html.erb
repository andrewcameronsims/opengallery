<div class='row'>

	<div class="col-2 white-on-orange"></div>

	<div class="col">
		<h1>Send us an email.</h1>
		<%= form_tag "https://formspree.io/testuserapp6@gmail.com", method: "POST", class: "email-form" do |form| %>
			<p> 
				<%= label_tag 'name' %><br />
				<%= text_field_tag 'name' %>
			</p>
			<p> 
				<%= label_tag 'email' %><br />
				<%= text_field_tag 'email' %>
			</p>
			<p> 
				<%= label_tag 'message' %><br />
				<%= text_area_tag 'message' %>
			</p>
			<p>
				<%= submit_tag 'Send email' %>
			</p>
		<% end %>
	</div>
</div>